<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="0dp"
        android:id="@+id/vertivalLayoutContainer"
        android:layout_weight="1"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/firstLane"
          android:orientation="vertical"
          android:background="@drawable/road"
          android:gravity="bottom|center_horizontal"
          android:layout_weight="1">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/plyo_w39i_210318_ss4mp_generated"
                android:contentDescription="Deer"
                android:id="@+id/firstLaneDeer"
                />
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/car"
              android:contentDescription="carLane1"
              />
      </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/SecondLane"
            android:orientation="vertical"
            android:background="@drawable/road"
            android:layout_weight="1"
          android:gravity="bottom|center_horizontal">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/plyo_w39i_210318_ss4mp_generated"
              android:contentDescription="Deer"
              android:id="@+id/SecondLaneDeer"
              />
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/car"
              android:contentDescription="carLane2"
              />
      </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ThirdLane"
            android:orientation="vertical"
            android:background="@drawable/road"
            android:layout_weight="1"
             android:gravity="bottom|center_horizontal">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/plyo_w39i_210318_ss4mp_generated"
              android:contentDescription="Deer"
              android:id="@+id/ThirdLaneDeer"
              />
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_gravity="center_horizontal"
              android:src="@drawable/car"
              android:contentDescription="carLane3"
              />
      </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/customWhite">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/leftBTN"
            android:background="@drawable/round_button"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignStart="@+id/leftBTN"
            android:layout_alignEnd="@+id/RightBTN"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heart"
                android:contentDescription="Health_Heart1"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heart"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="Health_Heart2"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heart"
                android:contentDescription="Health_Heart3"
                />

        </LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/RightBTN"
            android:background="@drawable/round_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_arrow_forward_24"
            />


    </RelativeLayout>

</LinearLayout>